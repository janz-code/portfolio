---
import getExperience from "../../commons/content/experience";
import SectionLayout from "../../commons/layouts/SectionLayout.astro";
import Timeline from "../components/Timeline.astro";
const locale = Astro.currentLocale!;
const temp = await getExperience(locale);
const data = temp.sort((a, b) => b.startDate.getTime() - a.startDate.getTime());
const title = locale === "en" ? "Experience" : "Experiencia";
---
<SectionLayout title={title}>
    <div class="grid grid-cols-2 gap-5">
        <Timeline data={[data[0]]} type="education" />
        <Timeline data={data.slice(1)} type="education" />
    </div>
</SectionLayout>
