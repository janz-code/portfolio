---
import SectionLayout from "../../commons/layouts/SectionLayout.astro";
import getServices from "../../commons/content/services";
import {Image} from "astro:assets";
const locale = Astro.currentLocale!;
const data = await getServices(locale);
const title = locale === "en" ? "Services" : "Servicios"
---
<SectionLayout title={title}>
    <ul class="grid grid-cols-3 lg:grid-cols-4 2xl:grid-cols-5 gap-5">
        {data.map((item, index) => (
            <li class="w-full relative rounded-2xl overflow-hidden hover:scale-y-105 transition-transform duration-300">
                <Image src={item.cover} alt={`${item.label} cover`} width={300} class="w-full object-center" />
                <div class="absolute bottom-0 inset-0 bg-black/10 backdrop-blur-sm"
                     style="mask-image: linear-gradient(to top, black, transparent); -webkit-mask-image: linear-gradient(to top, black, transparent);">
                </div>
                <div class="absolute bottom-0 left-0 right-0 h-fit bg-black/20 backdrop-blur-sm px-2 py-4 font-sweet
                    text-light-bg flex flex-col gap-y-5">
                    <h4 class="capitalize text-base xl:text-2xl 2xl:text-3xl font-semibold font-cascadia">{item.label}</h4>
                    <span class="md:text-sm xl:text-base font-light">{item.description}</span>
                </div>
            </li>
        ))}
    </ul>
</SectionLayout>