---
interface Props{
    field: string;
    value: string;
}
const {field, value} = Astro.props;
---
<li class="flex items-center gap-x-2 text-xs md:text-sm 2xl:text-base">
    <span class="text-nowrap font-medium font-cascadia capitalize">{field}:</span>
    <span class="text-nowrap font-sweet capitalize">{value}</span>
</li>
