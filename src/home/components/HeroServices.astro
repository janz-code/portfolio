---
import getServices from "../../commons/content/services";
const locale = Astro.currentLocale!;
const data = await getServices(locale);
const title = locale === "en" ? "Services" : "Servicios"
---
<div class="w-full min-w-full bg-light-bg p-4 rounded-2xl h-fit flex flex-col gap-y-2">
    <h3 class="text-2xl font-bold font-cascadia w-full">{title}</h3>
    <ul class="flex flex-col gap-y-2 w-full">
        {data.map((item, i) => (
            <li class="flex items-start gap-x-2">
                <figure class="w-5 h-5">
                    <item.icon/>
                </figure>
                <h5 class="font-sweet capitalize">{item.label}</h5>
            </li>
        ))}
    </ul>
</div>
