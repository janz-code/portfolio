---
import SectionLayout from "../../core/layouts/SectionLayout.astro";
import SkillsIsland from "./components/SkillsIsland";
import {fetchCollection} from "../../core/services/content_services";
import type ISkillSystem from "./types/ISkillSystem";
const lang = Astro.currentLocale;
if(!lang) return;
const systemCollection = await fetchCollection<ISkillSystem>("skillSystem", lang);
if(!systemCollection) return;
const item = systemCollection[0];
---
<SectionLayout title={item.data.title} subtitle={item.data.subtitle} id="skills">
    <SkillsIsland client:only="react" data={item.data} />
</SectionLayout>