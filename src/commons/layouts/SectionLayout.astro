---
interface Props{
    title: string
}
const {title} = Astro.props;
---
<section class="py-8 w-[97%] flex flex-col gap-y-20 justify-self-center">
    <div class="flex items-center justify-center w-full">
        <h3 class="font-cascadia text-4xl capitalize font-bold">{title}</h3>
    </div>
    <slot/>
</section>