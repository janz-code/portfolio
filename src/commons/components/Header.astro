---
import getHeaderData from "../content/header";
interface Props{
    id: number
}
const {id} = Astro.props;
const locale = Astro.currentLocale!;
const data = await getHeaderData(locale);
---
<header class="fixed top-3 left-0 w-full h-12 font-cascadia grid grid-cols-5 items-center gap-5 font-light px-12">
    <h4 class="text-left uppercase select-none font-bold text-2xl font-poppins">{data.title}</h4>
    <nav class="flex items-center justify-center gap-x-2 col-span-3">
        {data.nav.map((item,index)=>(
            <a class="px-6 py-1 transition-colors duration-500 rounded-md
                hover:bg-light-surface capitalize" href={item.path} target="_self" data-astro-prefetch>
                {item.label}
            </a>
        ))}
    </nav>
</header>